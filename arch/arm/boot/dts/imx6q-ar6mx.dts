/dts-v1/;
#include "imx6q.dtsi"
#include "imx6qdl-ar6mx.dtsi"

/{
    model = "BCM AR6MXQ Board";
    compatible = "bcmcom,imx6q-ar6mx", "fsl,imx6q";
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu2-di0";
	};

	lvds-channel@1 {
		crtc = "ipu2-di1";
	};
};

&mxcfb1 {
    status = "okay";
};

&mxcfb2 {
	status = "disabled";
};

&mxcfb3 {
	status = "disabled";
};

&mxcfb4 {
	status = "disabled";
};

&sata {
	status = "okay";
};
